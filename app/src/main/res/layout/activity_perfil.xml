<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Perfil">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.092"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nombre_label"
        android:layout_width="146dp"
        android:layout_height="37dp"
        android:text="Nombre:"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="230dp" />

    <TextView
        android:id="@+id/direccion_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dirección:"
        tools:layout_editor_absoluteX="215dp"
        tools:layout_editor_absoluteY="295dp" />

    <TextView
        android:id="@+id/telefono_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teléfono:"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="295dp" />

    <EditText
        android:id="@+id/nombre_edit"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:hint="Introduce tu nombre"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="341dp" />

    <EditText
        android:id="@+id/direccion_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce tu dirección"
        android:minHeight="48dp"
        tools:layout_editor_absoluteX="-58dp"
        tools:layout_editor_absoluteY="495dp" />

    <EditText
        android:id="@+id/telefono_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce tu teléfono"
        tools:layout_editor_absoluteX="-51dp"
        tools:layout_editor_absoluteY="419dp" />
</androidx.constraintlayout.widget.ConstraintLayout>